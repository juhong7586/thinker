generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String
  role          Role     
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  teacherGroups Group[]  @relation("TeacherGroups")
  student       Student?

  @@map("users")
}

model Student {
  id           Int           @id @default(autoincrement())
  userId       Int           @unique
  groupMembers GroupMember[]
  interests    Interest[]
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  studentColor String?

  @@map("students")
}

model Interest {
  id           Int          @id @default(autoincrement())
  studentId    Int
  field        String
  level        Int
  socialImpact SocialImpact
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  student      Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("interests")
}

model Group {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  inviteCode  String        @unique
  teacherId   Int?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  members     GroupMember[]
  teacher     User?         @relation("TeacherGroups", fields: [teacherId], references: [id])
  projects    Project[]

  @@map("groups")
}

model GroupMember {
  id        Int       @id @default(autoincrement())
  groupId   Int
  studentId Int
  role      GroupRole 
  joinedAt  DateTime  @default(now())
  student   Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  group     Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, studentId])
  @@map("group_members")
}

model Project {
  id          Int           @id @default(autoincrement())
  groupId     Int
  title       String
  description String?
  status      ProjectStatus 
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  group       Group         @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@map("projects")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum SocialImpact {
  SELF
  FAMILY
  FRIENDS
  CLASS
  SCHOOL
  COMMUNITY
  CITY
  COUNTRY
  WORLD
}

enum GroupRole {
  LEADER
  MEMBER
}

enum ProjectStatus {
  IDEA
  PLANNING
  IN_PROGRESS
  COMPLETED
}
